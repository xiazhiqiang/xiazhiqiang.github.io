#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/../../../../../marked@1.2.9/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/../../../../../marked@1.2.9/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../../marked@1.2.9/node_modules/marked/bin/marked" "$@"
else
  exec node  "$basedir/../../../../../marked@1.2.9/node_modules/marked/bin/marked" "$@"
fi
